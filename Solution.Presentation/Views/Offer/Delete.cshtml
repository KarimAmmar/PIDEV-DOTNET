@model Solution.Presentation.Models.OfferVM






@{
    Layout = "~/Views/Shared/_CompanyList.cshtml";
}



<div class="profile-company-content main-user" data-bg-color="f5f5f5">
    <div class="container">
        <div class="row">


            <div class="sidebar">

                <!-- SIDE BAR -->

                <div class="col-md-12">
                    <div class="col-md-3">

                    </div>
                    <div class="col-md-6">
                        <h5 class="main-title">Are you sure you want to DELETE this offer?</h5>
                        @Html.ActionLink("Back to List", "Index") <br /><br />

                        <div class="sidebar-information">
                            <ul class="single-category">
                                <li class="row">
                                    <h6 class="title col-xs-6"> Title:</h6>
                                    <span class="subtitle col-xs-6">@Model.Offer_Title</span>
                                </li>
                                <li class="row">
                                    <h6 class="title col-xs-6"> Description :</h6>
                                    <span class="subtitle col-xs-6">@Model.Offer_description</span>
                                </li>
                                <li class="row">
                                    <h6 class="title col-xs-6"> Duration </h6>
                                    <span class="subtitle col-xs-6">@Model.Offre_Duration</span>
                                </li>

                                <li class="row">
                                    <h6 class="title col-xs-6"> Salary</h6>
                                    <span class="subtitle col-xs-6">@Model.Offre_Salary</span>
                                </li>
                                <li class="row">
                                    <h6 class="title col-xs-6"> Contract Type </h6>
                                    <span class="subtitle col-xs-6">@Model.Offer_Contract_Type</span>
                                </li>
                                <li class="row">
                                    <h6 class="title col-xs-6"> Level Of Expertise</h6>
                                    <span class="subtitle col-xs-6">@Model.Offer_Level_Of_Expertise</span>
                                </li>
                                <li class="row">
                                    <h6 class="title col-xs-6"> Vues</h6>
                                    <span class="subtitle col-xs-6">@Model.Vues</span>
                                </li>
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-actions no-color col-xs-offset-6">
                                        <input type="submit" value="Delete" class="btn mb20 btn-small btn-primary " />

                                    </div>
                                }


                            </ul>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>



















