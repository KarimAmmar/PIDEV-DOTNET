@model IEnumerable<Solution.Presentation.Models.InterviewVM>

@{
    ViewBag.Title = "IndexCand";
}

<h2>Your Interviews</h2>


<table class="table">
    <tr>
        <th>
            ID
        </th>
        <th>
           Representator ID
        </th>
        <th>
           Candidate ID
        </th>
        <th>
            Date
        </th>
        <th>
           Type
        </th>
        <th>
            Location
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.InterviewId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.User_Id)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Candidat_Id)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Interview_Date)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Interview_Type)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Interview_Location)
    </td>
    <td>
        @if (item.Interview_Type == Solution.Presentation.Models.TypeVM.Unscheduled)
        {
        @Html.ActionLink("Choose a Date", "Calendar", new { id = item.InterviewId }) 
        }

    </td>
</tr>
}

</table>
