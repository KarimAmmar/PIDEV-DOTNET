@model IEnumerable<Solution.Presentation.Models.InterviewVM>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<p>
    @using (@Html.BeginForm("Index", "Interview", FormMethod.Get))
    {

        <b>Search By Type:</b>
        <p>
        @Html.RadioButton("searchBy", "None", true) <text>None</text>
        @Html.RadioButton("searchBy", "Scheduled") <text>Scheduled</text>
        @Html.RadioButton("searchBy", "Unscheduled") <text>Unscheduled</text>
        @Html.RadioButton("searchBy", "Done") <text>Done</text>
       </p>
        <b> Search </b>

        @Html.TextBox("search") <input type="submit" value="Search" />
    }

</p>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            ID
        </th>
        <th>
            Representator ID
        </th>
        <th>
            Candidate ID
        </th>
        <th>
            Date
        </th>
        <th>
            Location
        </th>
        <th>
            Type
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.InterviewId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User_Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Candidat_Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Interview_Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Interview_Location)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Interview_Type)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.InterviewId  }) |
            @Html.ActionLink("Details", "Details", new {  id=item.InterviewId }) |
            @Html.ActionLink("Delete", "Delete", new {  id=item.InterviewId  })
        </td>
    </tr>
}

</table>
