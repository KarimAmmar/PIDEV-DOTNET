@model Solution.Presentation.Models.CompanyVM
@{string path = "~/Content/Uploads/" + @Model.Company_Logo;}

@{
    ViewBag.Title = "Delete";
}

@{
    Layout = "~/Views/Shared/_CompanyList.cshtml";
}



<div class="profile-company-content main-user" data-bg-color="f5f5f5">
    <div class="container">
        <div class="row">


            <div class="sidebar">

                <!-- SIDE BAR -->

                <div class="col-md-12">
                    <div class="col-md-3">

                    </div>
                    <div class="col-md-6">
                        <h5 class="main-title">Are you sure you want to DELETE this company?</h5>
                        <div class="sidebar-thumbnail"><img alt="Company Logo" src="@Url.Content(path)" height="150" width="150" /> </div>
                        <div class="sidebar-information">
                            <ul class="single-category">
                                <li class="row">
                                    <h6 class="title col-xs-6">Company Name:</h6>
                                    <span class="subtitle col-xs-6">@Model.Company_Name</span>
                                </li>
                                <li class="row">
                                    <h6 class="title col-xs-6">Company Number:</h6>
                                    <span class="subtitle col-xs-6">@Model.Company_Number</span>
                                </li>
                                <li class="row">
                                    <h6 class="title col-xs-6">Company E-mail</h6>
                                    <span class="subtitle col-xs-6">@Model.Company_Email</span>
                                </li>

                                <li class="row">
                                    <h6 class="title col-xs-6">Company Address</h6>
                                    <span class="subtitle col-xs-6">@Model.Company_Address</span>
                                </li>
                                <li class="row">
                                    <h6 class="title col-xs-6"> Company Website</h6>
                                    <span class="subtitle col-xs-6">@Model.Company_Website</span>
                                </li>
                                <li class="row">
                                    <h6 class="title col-xs-6"> Number Of Employees</h6>
                                    <span class="subtitle col-xs-6">@Model.NumberOfEmployees</span>
                                </li>
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-actions no-color col-xs-offset-6">
                                        <input type="submit" value="Delete" class="btn mb20 btn-small btn-primary " /> |
                                        @Html.ActionLink("Back to List", "Index")
                                    </div>
                                }


                            </ul>
                        </div>
                    </div>

                </div>
            </div>
    </div>
</div>

    </div>