@model Solution.Presentation.Models.AvailabilityVM

@{
    ViewBag.Title = "Create";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Create a new Availability</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

       

        <div class="form-group">
         <span class="control-label col-md-2"> Date</span>  
            <div class="col-md-10">
                @Html.EditorFor(model => model.Availability_Date_Begin, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Availability_Date_Begin, "", new { @class = "text-danger" })
            </div>
        </div>

    

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
